<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  android:background="@drawable/img"
    tools:context=".activity.LienHeActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar"
        app:title="Liên Hệ"
        android:background="#39EA12"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_gravity="center"
        android:textStyle="bold"
       android:textColor="#26FF00"
        android:text="LIÊN HỆ VỚI CHÚNG TÔI "
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
   <LinearLayout
       android:layout_marginRight="25dp"
       android:layout_marginLeft="25dp"
       android:layout_marginTop="10dp"
       android:layout_gravity="center"
       android:orientation="horizontal"
       android:background="@drawable/spinner"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <ImageView
           android:src="@drawable/ic_phone_24"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       </ImageView>
       <TextView
           android:textSize="24sp"
           android:textStyle="bold"
           android:text="Số điện thoại: 039412414 "
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>
    <LinearLayout
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Email: holo@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_baseline_add_location_alt_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Địa chỉ: 280 An Dương Vương, P4, Q5, TP.HCM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>